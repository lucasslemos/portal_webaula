<div id="<%= dom_id post %>">

  <h5 class="card-header"><%= post.subject %></h5>
  <div class="card-body">
    <h5 class="card-title">
      <%= post.title %>
    </h5>
    <p class="card-text">
      <%= post.content %>
    </p>
    <%= link_to "New post" , new_post_path, class: "" %>
  </div>

</div>